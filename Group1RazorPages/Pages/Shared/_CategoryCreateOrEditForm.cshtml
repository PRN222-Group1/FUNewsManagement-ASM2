@model BusinessServiceLayer.DTOs.CategoryToAddOrUpdateDTO

@{
    var action = ViewData["Action"];

    ViewData["Title"] = action + " Category";

    var categories = ViewBag.Categories;
}

<div class="container mt-5">
    <div class="row justify-content-center">
        <div class="col-md-8">
            <!-- Card for the form -->
            <div class="card shadow-lg rounded">
                <div class="card-header bg-primary text-white">
                    <h4 class="mb-0">@action Category</h4>
                </div>
                <div class="card-body">
                    <form asp-action="@action" method="post" onsubmit="return confirm('Are you sure you want to @action this category?')">
                        <div asp-validation-summary="ModelOnly" class="text-danger"></div>

                        <!-- Category Name -->
                        <div class="form-group mb-3">
                            <label asp-for="CategoryName" class="control-label">Category Name</label>
                            <input asp-for="CategoryName" class="form-control" placeholder="Enter Category Name" />
                            <span asp-validation-for="CategoryName" class="text-danger"></span>
                        </div>

                        <!-- Category Description -->
                        <div class="form-group mb-3">
                            <label asp-for="CategoryDescription" class="control-label">Category Description</label>
                            <input asp-for="CategoryDescription" class="form-control" placeholder="Enter Category Description" />
                            <span asp-validation-for="CategoryDescription" class="text-danger"></span>
                        </div>

                        @if (action == "Edit")
                        {
                            <!-- News Status (checkbox) -->
                            <div class="form-group mb-3 form-check">
                                <input asp-for="Status" class="form-check-input" type="checkbox" />
                                <label asp-for="Status" class="form-check-label">Active</label>
                            </div>
                        }

                        <!-- Category Dropdown -->
                        <div class="form-group mb-3">
                            <partial name="_CategoryDropdownForCreateOrUpdate" model="categories" />
                        </div>

                        <!-- Submit Button -->
                        <div class="form-group">
                            <button type="submit" class="btn btn-primary w-100">@action Category</button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>