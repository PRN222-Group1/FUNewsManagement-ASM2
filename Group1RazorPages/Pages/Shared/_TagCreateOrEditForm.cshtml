@model Group1RazorPages.Pages.Tags.IndexModel

@{
    var action = ViewData["Action"];
}

<div class="modal fade" id="tagModal" tabindex="-1" aria-labelledby="tagModalLabel" aria-hidden="true" data-bs-backdrop="static">
    <div class="modal-dialog modal-lg">
        <div class="modal-content">
            <div class="modal-header bg-primary text-white">
                <h5 class="modal-title" id="tagModalLabel">@action Tag</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>

            <div class="modal-body">
                @if (TempData["ErrorMessage"] != null)
                {
                    <div class="alert alert-danger">@TempData["ErrorMessage"]</div>
                }
                <form id="tagForm" method="post" asp-page-handler="@action" onsubmit="confirm('Are you sure you want to @action this tag?')">
                    <div asp-validation-summary="ModelOnly" class="text-danger"></div>

                    <!-- Tag Name -->
                    <div class="form-group mb-3">
                        <label asp-for="Tag.TagName" class="control-label">Tag Name</label>
                        <input asp-for="Tag.TagName" class="form-control" placeholder="Enter Tag Name" />
                        <span asp-validation-for="Tag.TagName" class="text-danger"></span>
                    </div>

                    <!-- Tag Note -->
                    <div class="form-group mb-3">
                        <label asp-for="Tag.Note" class="control-label">Tag Note</label>
                        <input asp-for="Tag.Note" class="form-control" placeholder="Enter Tag Note" />
                        <span asp-validation-for="Tag.Note" class="text-danger"></span>
                    </div>

                    <div class="form-group mb-3">
                        <input type="hidden" asp-for="TagId" />
                    </div>

                    <!-- Submit Button -->
                    <div class="form-group">
                        <button type="submit" class="btn btn-primary w-100">@action Tag</button>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>