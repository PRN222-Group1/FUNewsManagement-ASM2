@using BusinessObjects.Enums
@using Group1RazorPages.ViewModels
@model BusinessServiceLayer.DTOs.SystemAccountToAddOrUpdateDTO

@{
    var action = ViewData["Action"];

    ViewData["Title"] = action + " Account";

    var rolesList = new List<RoleOption>() {
        new RoleOption { Value = 1, Text = "Staff" },
        new RoleOption { Value = 2, Text = "Lecturer" },
    };

    var role = (string?) ViewData["Role"];
}

<div class="container mt-5">
    <div class="row justify-content-center">
        <div class="col-md-8">
            <!-- Card for the form -->
            <div class="card shadow-lg rounded">
                <div class="card-header bg-primary text-white">
                    <h4 class="mb-0">@action Account</h4>
                </div>

                <!-- Show notification -->
                @if (TempData["SuccessMessage"] != null)
                {
                    <div class="alert alert-success">@TempData["SuccessMessage"]</div>
                }
                @if (TempData["ErrorMessage"] != null)
                {
                    <div class="alert alert-danger">@TempData["ErrorMessage"]</div>
                }

                <div class="card-body">
                    <form asp-action="@action" method="post" onsubmit="return confirm('Are you sure you want to @action this account?')">
                        <div asp-validation-summary="ModelOnly" class="text-danger"></div>

                        <!-- Account Name -->
                        <div class="form-group mb-3">
                            <label asp-for="AccountName" class="control-label">Account Name</label>
                            <input asp-for="AccountName" class="form-control" placeholder="Enter Account Name" />
                            <span asp-validation-for="AccountName" class="text-danger"></span>
                        </div>

                        <!-- Account Description -->
                        <div class="form-group mb-3">
                            <label asp-for="AccountEmail" class="control-label">Account Email</label>
                            <input asp-for="AccountEmail" class="form-control" placeholder="Enter Account Email" />
                            <span asp-validation-for="AccountEmail" class="text-danger"></span>
                        </div>

                        <!-- Account Password -->
                        <div class="form-group mb-3">
                            <label asp-for="AccountPassword" class="control-label">Account Password</label>
                            <input asp-for="AccountPassword" class="form-control" type="password" placeholder="Enter Account Password" />
                            <span asp-validation-for="AccountPassword" class="text-danger"></span>
                        </div>

                        <!-- Account Confirm Password -->
                        <div class="form-group mb-3">
                            <label asp-for="AccountConfirmPassword" class="control-label">Account Confirm Password</label>
                            <input asp-for="AccountConfirmPassword" class="form-control" placeholder="Enter Account Confirm Password" type="password" />
                            <span asp-validation-for="AccountConfirmPassword" class="text-danger"></span>
                        </div>

                        @if (role == Role.Admin.ToString()) {
                            <!-- Role Dropdown -->
                            <div class="form-group mb-3">
                                <partial name="_RoleDropdownForCreateOrUpdate" model="rolesList" />
                            </div>
                        }
                        else {
                            <div class="form-group mb-3">
                                <input asp-for="AccountRole" class="form-control" hidden />
                            </div>
                        }

                        <!-- Submit Button -->
                        <div class="form-group">
                            <button type="submit" class="btn btn-primary w-100">@action Account</button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>