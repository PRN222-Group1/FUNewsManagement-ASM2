@page
@model Group1RazorPages.Pages.Account.LoginModel
@{
    ViewData["Title"] = "Login";
}

<div class="login-container">
    <h4>Login</h4>
    @if (TempData["ErrorMessage"] != null)
    {
        <div class="alert alert-danger">@TempData["ErrorMessage"]</div>
    }
    <hr />
    <form method="post">
        <div asp-validation-summary="ModelOnly" class="text-danger"></div>

        <div class="form-group mb-4">
            <label asp-for="LoginPayload.AccountEmail" class="form-label text-dark font-weight-bold">Email</label>
            <input asp-for="LoginPayload.AccountEmail" class="form-control p-3 rounded border" type="email" placeholder="Please enter email" />
            <span asp-validation-for="LoginPayload.AccountEmail" class="text-danger"></span>
        </div>

        <div class="form-group mb-4">
            <label asp-for="LoginPayload.AccountPassword" class="form-label text-dark font-weight-bold">Password</label>
            <input asp-for="LoginPayload.AccountPassword" class="form-control p-3 rounded border" type="password" placeholder="Please enter password" />
            <span asp-validation-for="LoginPayload.AccountPassword" class="text-danger"></span>
        </div>

        <input type="hidden" asp-for="LoginPayload.ReturnUrl" value="@Model.ReturnUrl" />

        <div class="form-group mt-3">
            <input type="submit" value="Login" class="btn btn-custom w-100" />
        </div>
    </form>
</div>