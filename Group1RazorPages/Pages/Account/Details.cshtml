@page "{id:int?}"
@using BusinessObjects.Enums
@model Group1RazorPages.Pages.Account.DetailsModel

@{
    ViewData["Title"] = "Profile";

    var role = (string) ViewData["Role"];
}

<div class="container mt-5">
    <div class="row justify-content-center">
        <div class="col-md-8">
            <!-- Profile Card -->
            <div class="card shadow-lg rounded">

                <div class="card-header text-center bg-primary text-white position-relative">
                    <!-- Card Header: Profile Image -->
                    <div class="text-center mt-4">
                        <img src="@Model.AccountDetails.ImageUrl" alt="Profile Image" class="rounded-circle img-fluid" style="width: 150px; height: 150px; object-fit: cover;">
                    </div>

                    <!-- Card Header: Profile Name -->
                    <h3 class="mt-5 mb-2">@Model.AccountDetails.AccountName</h3>
                    <p class="badge bg-secondary mb-3">@Model.AccountDetails.AccountRole</p>
                </div>

                <!-- Card Body: Profile Details -->
                <div class="card-body">
                    <dl class="row">
                        <!-- Account Name -->
                        <dt class="col-sm-4 text-end font-weight-bold">Name</dt>
                        <dd class="col-sm-8">
                            <span class="form-control-plaintext">@Model.AccountDetails.AccountName</span>
                        </dd>

                        <!-- Account Email -->
                        <dt class="col-sm-4 text-end font-weight-bold">Email</dt>
                        <dd class="col-sm-8">
                            <span class="form-control-plaintext">@Model.AccountDetails.AccountEmail</span>
                        </dd>

                        <!-- Account Role -->
                        <dt class="col-sm-4 text-end font-weight-bold">Role</dt>
                        <dd class="col-sm-8">
                            <span class="badge bg-info text-white">@Model.AccountDetails.AccountRole</span>
                        </dd>
                    </dl>
                </div>

                <!-- Card Footer: Action Buttons -->
                <div class="card-footer text-center d-flex justify-content-center gap-2">
                    <button class="btn btn-outline-primary btn-md d-flex align-items-center mx-2 btn-edit-profile" data-id="@Model.AccountDetails.Id">
                        <i class="fas fa-edit"></i>
                    </button>

                    <a asp-page="/NewsArticles/Index" class="btn btn-secondary">
                        <i class="fa fa-arrow-left"></i> Back to Home
                    </a>
                </div>
            </div>
        </div>
    </div>
</div>

<!-- Modal Container -->
<div id="modalContainer">
    <partial name="_ProfileEditForm" model="Model" />
</div>

@section Scripts {
    <script>
        $(document).ready(function() {
            // Handle automatic modal show
            @if (Model.ShowModal)
            {
                <text>$('#profileModal').modal('show');</text>
            }

            // Handle edit button click
            $('.btn-edit-profile').click(function() {
                var id = $(this).data('id');
                $.get('@Url.Page("Details", "ShowEditModal")', { id: id }, function(data) {
                    $('#modalContainer').html(data);
                    $('#profileModal').modal('show');
                });
            });
        })
    </script>
}